{
    "name": "cccadv",
    "version": "0.0.1",
    "description": "cocos creator extension to make ADV games.",
    "author": "jikai",
    "main": "main.js",
    "main-menu": {
        "cccadv/open editor": {
            "message": "cccadv:open-editor"
        }
    },
    "panel": {
        "main": "panel/editor.html",
        "type": "simple",
        "title": "ADV Editor",
        "width": 800,
        "height": 600
    },
    "runtime-resource": {
        "path": "resources",
        "name": "resources"
    },
    "reload": {
        "ignore": [
            "resources/scripts/**/*"
        ]
    }
}